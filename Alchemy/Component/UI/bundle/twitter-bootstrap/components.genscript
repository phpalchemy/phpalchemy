>>>

@end

/*
 * Select html widget
 */
@block select

@var html <<<
<div class="controls">
  <select
    id="{{ id }}"
    {% for at_name, at_value in attributes %}
      {{ at_name }}="{{ at_value }}"
    {% endfor %}
  >
    {% for item in items %}
    <option
      value="{{ item['value'] }}"
      {% if value | isarray %}
        {% if item['value'] in value %}
          selected="selected"
        {% endif %}
      {% else %}
        {% if item['value'] == value %}
          selected="selected"
        {% endif %}
      {% endif %}
    >{{ item['label'] }}</option>
    {% endfor %}
  </select>
</div>
>>>

@end

/*
 * Flipswitch html widget
 */
@block flipswitch

@var html <<<
<div class="controls">
  <select
    id="{{ id }}"
    class="span1"
    {% for at_name, at_value in attributes %}
      {{ at_name }}="{{ at_value }}"
    {% endfor %}
  >
    {% for item in items %}
    <option
      name="{{ item['value'] }}"
      {% if value | isarray %}
        {% if item['value'] in value %}
          selected="selected"
        {% endif %}
      {% else %}
        {% if item['value'] == value %}
          selected="selected"
        {% endif %}
      {% endif %}
    >{{ item['label'] }}</option>
    {% endfor %}
  </select>
</div>
>>>

@end

/*
 * Textarea html widget
 */
@block textarea

@var html <<<
<div class="controls">
<textarea
  id="{{ id }}"
  class="input-xlarge"
  {% for at_name, at_value in attributes %}
    {{ at_name }}="{{ at_value }}"
  {% endfor %}
>
{{ value }}
</textarea>
</div>
>>>

@end

/*
 * Form html widget
 */
@block form

@var html <<<
<form id="{{ id }}"{% for at_name, at_value in attributes %} {{ at_name }}="{{ at_value }}"{% endfor %}>
    <table>
    {% for item in items %}
    <tr>
    <td>{{ item['label'] | safe }}: </td><td>{{ item['source']['html'] | safe }}</td>
    </tr>
    {% endfor %}
    <tr colspan="2" align="center">
    {% for button in buttons %}
    <td><button type="{{ button['type'] }}">{{ button['type'] }}</td>
    {% endfor %}
    <td><button type="reset">Reset</td>
    </tr>
    </table>
</form>
>>>

@var js <<<
>>>

@end

/*
 * Default block
 */
@block _default

@var html <<<
<div class="controls">
  <input
    type="{{ xtype }}"
    id="{{ id }}"
    value="{{ value }}"
    class="input-xlarge"
    {% for at_name, at_value in attributes %}
      {{ at_name }}="{{ at_value }}"
    {% endfor %}
  />
</div>
>>>

@end









