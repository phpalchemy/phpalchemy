/*****************************************************************************
 *                     HTML Components generator script
 *****************************************************************************/

// Setting as default block to: '_default'
@def global version 1.0

// Setting as default block to: '_default'
@def setconf default_block _default

/*    *** Components blocks  ***    */

/*
 * Textbox html widget
 */
@block textbox

@var html <<<
<div class="controls">
  <input type="text" id="{{ id }}" value="{{ value }}"
  {% for at_name, at_value in attributes %}
    {{ at_name }}="{{ at_value }}"
  {% endfor %}
 />
</div>
>>>

@var javascript alert('{id}');

@end

/*
 * Checkbox html widget
 */
@block checkbox

@var html <<<
<div class="controls">
<label class="checkbox">
  <input
    type="checkbox"
    id="{{ id }}"
    {% for at_name, at_value in attributes %}
      {{ at_name }}="{{ at_value }}"
    {% endfor %}
    {% if value %}
      checked="checked"
    {% endif %}
  />
  {{ label }}
</label>
</div>
>>>

@end


/*
 * Checkgroup html widget
 */
@block checkgroup

@var html <<<
<div class="controls">
{% for i, item in items %}
<label class="checkbox{% if inline == "true" %} inline{% endif %}">
  <input
      type="checkbox"
      name="{{ item['name'] }}"
      value="{{ item['value'] }}"
      {% if item['value'] in value %}
        checked="checked"
      {% endif %}
  >
  {{ item['label'] }}
</label>
{% endfor %}
</div>
>>>

@end

/*
 * Radiogroup html widget
 */
@block radiogroup

@var html <<<
<div class="controls">
{% for item in items %}
<label class="radio{% if inline == "true" %} inline{% endif %}">
  <input
    type="radio"
    name="{{ attributes['name'] }}"
    value="{{ item['value'] }}"
    {% if item['value'] == value %}
      checked="checked"
    {% endif %}
  >
  {{ item['label'] }}
</label>
{% endfor %}
</div>
>>>

@end

